      <span
        class="color-swatch"
        style="background-color: #979c99"
        data-value="#979c99"
      ></span>
      <span
        class="color-swatch"
        style="background-color: #a1bbe0"
        data-value="#a1bbe0"
      ></span>
      <span
        class="color-swatch"
        style="background-color: #e48f3e"
        data-value="#e48f3e"
      ></span>
      <span
        class="color-swatch"
        style="background-color: #316e56"
        data-value="#316e56"
      ></span>
      <span
        class="color-swatch"
        style="background-color: #edebde"
        data-value="#edebde"
      ></span>
    </div>
  </div>
  <div id="accent-color" class="color-entry">
    <span class="swatch-group-label"> Accent Color </span>
    <div class="swatch-group">
      <span
        class="color-swatch selected"
        style="background-color: #272227"
        data-value="#272227"
      ></span>
      <span
        class="color-swatch"
        style="background-color: #a0072c"
        data-value="#a0072c"
      ></span>
      <span
        class="color-swatch"
        style="background-color: #161369"
        data-value="#161369"
      ></span>
      <span
        class="color-swatch"
        style="background-color: #e8ced3"
